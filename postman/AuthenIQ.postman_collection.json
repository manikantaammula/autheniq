{
  "info": {
    "name": "AuthenIQ APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "code", "value": "" }
  ],
  "item": [
    {
      "name": "Register Product",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{ \"name\": \"Demo\", \"batch\": \"B1\" }", "options": { "raw": { "language": "json" } } },
        "url": "{{baseUrl}}/api/products/register"
      }
    },
    {
      "name": "Verify Product",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/verify?code={{code}}"
      }
    }
  ]
}
